<header class="jumbotron container">
  <div class="row">
    <div class="col-10">
      <h1>BeeChin!</h1>
      <p>What's buzzin'?</p>
    </div>
  </div>
</header>

<main class="container">
  <div class="row">
    <div class="col-4">
      <div class="container">
        <form id="newBuzzForm">
          <div class="form-group">
            <textarea id="newBuzzText" class="form-control" rows="3"></textarea>
          </div>
          <p>Posted by: (Leave blank to post anonymously)</p>
          <div class="form-group">
            <input id="newBuzzDisplayName" type="text" class="form-control"></input>
          </div>
          <button type="submit" class="btn btn-primary">Create new buzz!</button>
        </form>
      </div>
    </div>


    <div class="col-8">

      {{#each sortedPosts}}
      {{> post }}
      {{/each}}

    </div>
  </div>
</main>

